<% layout('/layouts/boilerplate') -%>
    
    <div id="filters">
        <!-- Filter Icon -->
        <button id="filter-logo"><i class="fa-solid fa-filter"></i> Filters</button>

        <!-- Original Inline Filters (Unchanged for Desktop) -->
        <div id="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trading</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Room</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic City</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div id="filter">
            <div><i class="fa-brands fa-font-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div id="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Dooms</p>
        </div>
        <div id="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boots</p>
        </div>

        <!-- Tax Toggle (Always Visible) -->
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>

    <!-- Full-Screen Filter Overlay -->
    <div id="filter-overlay">
        <div class="filter-box">
            <button class="close-btn">Close</button>
            <div class="filter-card"><i class="fa-solid fa-fire"></i> Trading</div>
            <div class="filter-card"><i class="fa-solid fa-bed"></i> Room</div>
            <div class="filter-card"><i class="fa-solid fa-mountain-city"></i> Iconic City</div>
            <div class="filter-card"><i class="fa-solid fa-mountain"></i> Mountains</div>
            <div class="filter-card"><i class="fa-brands fa-font-awesome"></i> Castles</div>
            <div class="filter-card"><i class="fa-solid fa-person-swimming"></i> Amazing Pools</div>
            <div class="filter-card"><i class="fa-solid fa-campground"></i> Camping</div>
            <div class="filter-card"><i class="fa-solid fa-cow"></i> Farms</div>
            <div class="filter-card"><i class="fa-regular fa-snowflake"></i> Arctic</div>
            <div class="filter-card"><i class="fa-solid fa-igloo"></i> Dooms</div>
            <div class="filter-card"><i class="fa-solid fa-ship"></i> Boots</div>
        </div>
    </div>




    <div class="row row-cols-lg-3 row-cols-md-2 mt-3 row-cols-small-1">
        <% for(let listing of allListing){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card" style="width: 20rem;">
                    <img src="<%= listing.image.url %>" class="card-img-top card-over" alt="listing_image"
                        style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= listing.title %> <br />
                                &#8377; <%= typeof listing.price==="number" ? listing.price.toLocaleString("en-IN")
                                    : "N/A" %>
                                    <i class="tax-info">&nbsp;&nbsp;+18 GST</i>

                        </p>
                    </div>
                </div>
            </a>

            <%} %>
    </div>